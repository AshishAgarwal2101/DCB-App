<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#3333"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAlignment="center"
            android:text="@string/receiver_s_name"
            android:id="@+id/nameDataDialog" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Name"
            android:layout_toEndOf="@id/nameDataDialog"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/nameDialog" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:id="@+id/vpaDataDialog"
            android:text="@string/receiver_s_vpa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:id="@+id/vpaDialog"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:layout_toEndOf="@id/vpaDataDialog"
            android:text="595789@ybl"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="@string/enter_amount"
            android:layout_marginStart="50dp"/>
        <EditText
            android:layout_width="150dp"
            android:inputType="number"
            android:layout_height="40dp"
            android:background="@drawable/amount_dialog_text"
            android:id="@+id/amountDialog"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="120dp"
            android:text="@string/confirm"
            android:id="@+id/confirm_button"
            android:textColor="#ffffff"
            android:background="@color/colorRed"
            android:layout_marginTop="20dp"
            android:layout_marginStart="110dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>